<%
  const pageBody = `
    <main class="w-screen h-screen flex items-center justify-center bg-gray-200">
      <div class="bg-white p-6 border rounded-xl w-md">
        <div class="flex flex-col items-center w-full">
          <span class="text-2xl font-semibold">Login</span>
          <span class="text-xl font-semibold animate-pulse">Welcome back!</span>
          ${error ? `<span class="text-red-600">${error}</span>` : ''}
        </div>
        <div class="flex flex-col gap-3 pt-6">
          <div class="flex items-center gap-2">
            <label for="email">Email:</label>
            <input
              type="email"
              id="email"
              class="bg-gray-200 w-full outline-gray-500 p-2 rounded-lg"
              placeholder="Enter your email address"
              required
            />
          </div>
          <div class="flex items-center gap-2">
            <label for="password">Password:</label>
            <input
              type="password"
              id="password"
              class="bg-gray-200 w-full outline-gray-500 p-2 rounded-lg"
              placeholder="Enter your password"
              required
            />
          </div>
          <button id="loginBtn" class="w-full bg-blue-600 text-white py-2 items-center text-center font-semibold text-xl rounded-xl">
            Login
          </button>
        </div>
        <a href="/register" class="text-blue-600 mt-4 block text-center">Register</a>
      </div>
    </main>
    <script src="https://www.gstatic.com/firebasejs/10.12.2/firebase-app.js"></script>
    <script src="https://www.gstatic.com/firebasejs/10.12.2/firebase-auth.js"></script>
    <script>
      const firebaseConfig = {
        apiKey: "AIzaSyDnue-qykLWX85SJqDKbgixAv8y1CRuJXA", // Your Firebase client-side API key
        authDomain: "attendance-e75b0.firebaseapp.com",
        projectId: "attendance-e75b0",
        storageBucket: "attendance-e75b0.appspot.com",
        messagingSenderId: "426044164583",
        appId: "1:426044164583:web:f947cb98449896dcd01542",
        measurementId: "G-2B94KZC2B7"
      };
      firebase.initializeApp(firebaseConfig);
      const auth = firebase.auth(); // Use firebase.auth() if you're not using the modular SDK for client-side
      // If you are using the modular SDK, it would be:
      // import { getAuth, signInWithEmailAndPassword } from "https://www.gstatic.com/firebasejs/10.12.2/firebase-auth.js";
      // const auth = getAuth();

      document.getElementById('loginBtn').addEventListener('click', async () => {
        const email = document.getElementById('email').value;
        const password = document.getElementById('password').value;
        try {
          const userCredential = await auth.signInWithEmailAndPassword(email, password);
          const idToken = await userCredential.user.getIdToken();
          // Send the idToken to your Node.js backend
          const response = await fetch('/login', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ idToken: idToken })
          });
          const data = await response.json();
          if (response.ok && data.status === 'success') { // Check response.ok and data.status
            window.location.href = '/'; // Redirect to home on successful server-side session creation
          } else {
            alert(data.error || 'Login failed.');
          }
        } catch (error) {
          alert(error.message);
        }
      });
    </script>
  `;
%>
<%- include('base', { title: title, body: pageBody, error: error }) %>